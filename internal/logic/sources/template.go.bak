package sources

import (
	"context"
	"encoding/json"
	"fmt"
	"log"
	"net/http"
	"time"
	"github.com/Numpkens/grip/internal/logic"
)

func (s *{{theSource}}) Search(ctx context.Context, query string) ([]logic.Post, error) {
	//Create
	url := fmt.Sprintf("%s/search?q=%s", s.BaseURL, query)
	//Request
	req, err := http.NewRequestWithContext(ctx, "GET", url, nil)
	if err != nil{
		return nil, fmt.Errorf("request creation failed: %w", err)
	}
	//Execute
	resp, err := s.Client.Do(req)
	if err != nil {
		return nil, err
	}
	//Close
	defer resp.Body.Close()

	if resp.StatusCode != http.StatusOK{
		return nil, fmt.Errorf("api responded with status: %d", resp.StatusCode)
	}

	//API specific struct
	var {{apiName}} []struct {
		Title string `json:"title"`
		Link string `json:"link"`
		CreatedAt string `json:"createdat"`
	}

	if err := json.NewDecoder(resp.Body).Decode(&{{apiName}}); err != nil {
		return nil, fmt.Errorf("json decode failed: %w", err)
	}

	var posts []logic.Post
	for _, item := range {{apiName}} {
		parsedDate, err := time.Parse(time.RFC3339, item.CreatedAt)
		if err != nil {
			log.Printf("Source Name: Skipping Post %q: %v", item.Title, err)
			continue
		}

		posts =append(posts, logic.Post{
			Title: item.Title,
			URL: item.Link,
			Source: "Source Name",
			PublishedAt: parsedDate,
		})
	}
	return posts, nil
}